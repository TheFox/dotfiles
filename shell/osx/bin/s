#!/usr/bin/env bash
# Created @ 03.04.2013 by Christian Mayer <https://fox21.at>

# Standby macOS

timeout=$1
exec_s="$2"

if [ "$timeout" != "" ]; then
	for wait in $(seq "$timeout" 1); do
		printf "%d " "$wait"
		sleep 1
	done
	echo '0'
	echo
fi

if [ "$exec_s" != "" ]; then
	echo "exec: '$exec_s'"
	$exec_s
fi

date
echo 'sleep'
pmset sleepnow
