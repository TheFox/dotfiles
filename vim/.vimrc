" Global VIM Config

syntax on

set cursorline
set ignorecase
set number
set gdefault
set binary
set noeol
set hlsearch
set tabstop=4
set shiftwidth=4
" set lcs=tab:▸\ ,trail:·,eol:¬,nbsp:_
" set list
set incsearch
set noerrorbells
set ruler
set showmode
" set title
set showcmd
set nolist

filetype plugin indent on
