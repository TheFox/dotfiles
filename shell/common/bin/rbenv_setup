#!/usr/bin/env bash

# 2.0.0-p648 2.1.10
VERSIONS="2.2.5 2.3.1 2.4.0-preview2"


which -a rbenv &> /dev/null || { echo 'rbenv not installed'; exit 1; }

for version in ${VERSIONS}; do
	echo "install version '${version}'"
	rbenv install "${version}" --skip-existing
done

for version in ${VERSIONS}; do
	echo "install bundler for version '${version}'"
	RBENV_VERSION="${version}" gem install bundler
done

rbenv global 2.3.1
rbenv versions
