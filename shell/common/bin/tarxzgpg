#!/usr/bin/env bash
# Created @ 07.01.2014 by Christian Mayer <http://fox21.at>
# Create a .tar.xz.gpg file from a file or directory.

SCRIPT_BASEDIR=$(dirname $0)
SCRIPT_BASENAME=$(basename $0)

inputfile=$1
inputfile=$(basename $inputfile)
tarfile=$inputfile.tar
xzfile=$tarfile.xz
gpgfile=$xzfile.gpg


set -e

. $SCRIPT_BASEDIR/functions-inc.sh
$SCRIPT_BASEDIR/tarxz $inputfile
$SCRIPT_BASEDIR/gpgf $xzfile
